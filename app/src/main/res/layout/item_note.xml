<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    cardview:cardCornerRadius="5dp"
    view:cardElevation="2dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:padding="10dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title 1"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technology will never replace great teachers but technology in the hands of great teachers is transformational."
        android:maxLength="200"
        android:textSize="15sp"
        android:textColor="#4E4E4E"/>

</LinearLayout>

</androidx.cardview.widget.CardView>